<div class='user_box'>
  <div class='user_box-inner'>
    <div class='user_box-header'>
      <h1>ログイン</h1>
    </div>
    <div class='user_box-main'>
      <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f|%>
        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>
        <div class='field'>
          <div class='field-label'>
            <label for='user-email'>メールアドレス</label>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, autofocus: true, id: 'user-email' %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <label for='user-password'>パスワード</label>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off", id: 'user-password' %>
          </div>
        </div>
          <div class='actions'>
            <%= f.submit "ログイン", class: 'btn'%>
          </div>
        </div>
      <% end %>
    </div>
    <div class='user_box-footer'>
      <%= link_to '新規登録はこちら', new_user_registration_path %></br>
      <a href='#'>パスワードを忘れた場合はこちら</a>
    </div>
  </div>
</div>