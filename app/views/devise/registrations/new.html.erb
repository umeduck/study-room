<div class='user_box-signup'>
  <div class='user_box-inner'>
    <div class='user_box-header'>
      <h1>新規登録</h1>
    </div>
    <div class='user_box-main'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class='field'>
          <div class='field-label'>
            <label>ニックネーム</label>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <label>学年</label>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:school_year_id, SchoolYear.all, :id, :year, {}, {class:"select-box", id:"item-sales-status"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <label>メールアドレス</label>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <label>パスワード</label>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <label>パスワード（確認）</label>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class='actions-sign-up'>
          <%= f.submit "アカウント作成", class: 'btn'%>
        </div>
      <% end %>
    </div>
    <div class='user_box-footer'>
      <%= link_to 'ログインはこちら', new_user_session_path %>
    </div>
  </div>
</div>
